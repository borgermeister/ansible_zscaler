---

extends: default

rules:
  braces:
    min-spaces-inside: 1
    max-spaces-inside: 1
  commments:
    min-spaces-from-content: 1
  indentation:
    spaces: 2
    indent-sequences: true
  line-length:
    max: 200
    level: warning
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true
  truthy:
    allowed-values:
      - "true"
      - "false"
